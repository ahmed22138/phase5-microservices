{
  "name": "@phase5/task-service",
  "version": "1.0.0",
  "description": "Phase V Task Service - Task CRUD, priority, tags, search",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx src/persistence/migrations/run.ts"
  },
  "dependencies": {
    "@dapr/dapr": "^3.4.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "testcontainers": "^10.4.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
