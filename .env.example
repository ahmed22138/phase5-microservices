# Phase 5 - Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# TASK SERVICE (Port 3001)
# ===========================================
TASK_DB_HOST=localhost
TASK_DB_PORT=5432
TASK_DB_NAME=task_db
TASK_DB_USER=task_user
TASK_DB_PASSWORD=task_password
TASK_SERVICE_PORT=3001

# ===========================================
# REMINDER SERVICE (Port 3002)
# ===========================================
REMINDER_DB_HOST=localhost
REMINDER_DB_PORT=5433
REMINDER_DB_NAME=reminder_db
REMINDER_DB_USER=reminder_user
REMINDER_DB_PASSWORD=reminder_password
REMINDER_SERVICE_PORT=3002
SCHEDULER_INTERVAL_MS=30000

# ===========================================
# RECURRENCE SERVICE (Port 3003)
# ===========================================
RECURRENCE_DB_HOST=localhost
RECURRENCE_DB_PORT=5434
RECURRENCE_DB_NAME=recurrence_db
RECURRENCE_DB_USER=recurrence_user
RECURRENCE_DB_PASSWORD=recurrence_password
RECURRENCE_SERVICE_PORT=3003
ENABLE_SCHEDULER=true
ENABLE_EVENT_HANDLERS=true

# ===========================================
# AUDIT SERVICE (Port 3004)
# ===========================================
AUDIT_DB_HOST=localhost
AUDIT_DB_PORT=5435
AUDIT_DB_NAME=audit_db
AUDIT_DB_USER=audit_user
AUDIT_DB_PASSWORD=audit_password
AUDIT_SERVICE_PORT=3004

# ===========================================
# CHATBOT SERVICE (Port 3000)
# ===========================================
CHATBOT_PORT=3000
TASK_SERVICE_URL=http://localhost:3001
ENABLE_REMINDER_HANDLER=true

# ===========================================
# INFRASTRUCTURE
# ===========================================
# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Dapr
DAPR_HTTP_PORT=3500

# ===========================================
# COMMON
# ===========================================
NODE_ENV=development
LOG_LEVEL=info
